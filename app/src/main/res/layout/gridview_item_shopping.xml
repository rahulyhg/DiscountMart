<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shopping_gridview_height" />


    <ImageView
        android:id="@+id/imageview_grid_item"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/shopping_gridview_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"

        android:alpha="0.5"

        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shopping_gridview_height"
        android:background="@drawable/gradient_black_bg" >
    </FrameLayout>



    <TextView
        android:id="@+id/android_gridview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageview_grid_item"
        android:layout_alignTop="@+id/imageview_grid_item"
        android:layout_alignRight="@+id/imageview_grid_item"
        android:layout_alignBottom="@+id/imageview_grid_item"
        android:layout_margin="1dp"
        android:gravity="center|bottom"
        android:text="Hello"
        android:textColor="@color/white"
        android:textSize="15dp"

        />




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sourabh.ichiapp.activities.ProfileActivity"
    android:background="@drawable/material_drawer_shadow_top"
    android:animateLayoutChanges="true"

    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:id="@+id/cardView">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue"
            android:padding="5dp"

            >

            <TextView
                android:text="Fname Lname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:id="@+id/txtFnameLname"

                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

            <TextView
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEmail"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"

                android:layout_alignTop="@+id/imageView2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/about_icon_email"
                android:layout_marginTop="10dp"
                android:id="@+id/imageView2"
                android:layout_below="@+id/txtFnameLname"
                android:layout_toLeftOf="@id/txtEmail"
                 />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_local_phone_black_24dp"
                android:id="@+id/imageView5"
                android:layout_below="@+id/imageView2"
                android:layout_toLeftOf="@+id/txtPhone"
                android:layout_marginTop="5dp"

                />

            <TextView
                android:text="Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPhone"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"

                android:layout_alignBottom="@+id/imageView5"
                android:layout_alignLeft="@+id/txtEmail"
                android:layout_alignStart="@+id/txtEmail" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/shape_cart_count"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/imageView6"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/txtFnameLname"
                    android:layout_toStartOf="@+id/txtFnameLname" />

                <TextView
                    android:text="Points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txPoints"
                    android:layout_alignTop="@+id/imageView6"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"


                    android:layout_marginLeft="5dp"
                    android:textStyle="normal|bold"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:text="View Coupon's History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/buttonCouponHistory"
        android:layout_below="@+id/cardView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/light_blue"
        android:textColor="@color/white"

        />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/cardViewRefer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/light_blue"
            >

            <TextView
                android:text="Refer Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:id="@+id/textViewReferTitle"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewReferTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Refer Code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtReferCode"
                    android:layout_centerHorizontal="true"
                    android:textStyle="normal|bold"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_menu_share"
                android:id="@+id/imageShare"
                android:layout_marginRight="34dp"
                android:layout_marginEnd="34dp"

                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:text="View Shopping History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonShoppingHistory"
        android:background="@color/light_blue"
        android:textColor="@color/white"

        android:layout_marginTop="21dp"
        android:layout_below="@+id/buttonCouponHistory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Chnage Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonChangePassword"
        android:background="@color/light_blue"
        android:textColor="@color/white"

        android:layout_marginTop="21dp"
        android:layout_below="@+id/buttonShoppingHistory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
